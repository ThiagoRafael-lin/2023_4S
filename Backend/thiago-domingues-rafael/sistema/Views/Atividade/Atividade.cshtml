@{
    ViewBag["Title"] = "Atividade";
}

@*cabecalho*@
<div style="display:flex">
    <h3>@ViewBag.NomeProfessor</h3>
    <form asp-controller="Login" , asp-action="Logout">
        <button type="submit">Sair</button>
    </form>
</div>


<form asp-controller="Atividade" asp-action="CadastrarAtividade">
    <input type="hidden" name="turmaId" value="@ViewBag.TurmaId" />
    <input type="text" name="descricao" placeholder="Nome" required />

    <button type="submit">
        Cadastrar Atividade
    </button>
</form>

<h4>Turma: @ViewBag.NomeTurma</h4>

<table>
    <thead>
        <tr>
            <th>Numero</th>
            <th>Nome</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var atividade in Model)
        {
            <tr>
                <td>@atividade.AtividadesId</td>
                <td>@atividade.Descricao</td>
            </tr>
        }
    </tbody>
</table>
